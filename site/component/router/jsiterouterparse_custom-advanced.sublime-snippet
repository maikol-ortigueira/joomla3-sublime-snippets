<snippet>
	<content><![CDATA[case '${1:${TM_SINGULAR/(.+)/\L\1/g}}':
	if (isset(\$segments[1]))
	{
		if (\$advanced)
		{
			\$segment = str_replace(':', '-', \$segments[1]);

			\$db = JFactory::getDbo();
			\$query = 'SELECT id FROM #__${TM_COMPONENT/(.+)/\L\1/g}_${2:${1/(.+)/\L\1/g}s} WHERE alias = ' . \$db->quote(\$segment);
			\$db->setQuery(\$query);
			\$id = \$db->loadResult();
		}
		else
		{
			\$id = \$segments[1];
		}

		\$vars['id'] = \$id;
		\$vars['view'] = '${1/(.+)/\L\1/g}';
	}

	break;]]></content>
	<tabTrigger>jsiterouterparse_custom-advanced</tabTrigger>
	<scope>source.php</scope>
</snippet>
